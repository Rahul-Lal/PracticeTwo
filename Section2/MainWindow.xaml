<Window x:Class="Section2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Section2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid x:Name="grdOne" HorizontalAlignment="Left" Height="100" Margin="60,40,0,0" VerticalAlignment="Top" Width="100">
            <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="23" Margin="-5,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        </Grid>
        <Grid x:Name="grdTwo" HorizontalAlignment="Left" Height="100" Margin="175,40,0,0" VerticalAlignment="Top" Width="100"/>
        <Grid x:Name="grdThree" HorizontalAlignment="Left" Height="100" Margin="55,155,0,0" VerticalAlignment="Top" Width="100">
            <Button x:Name="btnInput" Content="Button" HorizontalAlignment="Left" Margin="5,40,0,0" VerticalAlignment="Top" Width="75" Click="btnInput_Click"/>
        </Grid>
        <Grid x:Name="grdFour" HorizontalAlignment="Left" Height="100" Margin="170,155,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
